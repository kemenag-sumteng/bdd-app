<h2>Mendaftar</h2>

<%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <%= f.text_field :nama,
                  placeholder: 'nama ditampilkan secara publik',
                  class: 'form-control' %>
  <%= f.text_field :email, 
                    placeholder: 'email', 
                    class: 'form-control' %>
  <%= f.password_field :password, 
                       placeholder: 'password', 
                       class: 'form-control' %>
  <% if @minimum_password_length %>
  <em>(Panjang password minimal <%= @minimum_password_length %> karakter)</em>
  <% end %><br />
  <%= f.password_field :password_confirmation, 
                       placeholder: 'password confirmation', 
                       class: 'form-control' %>
  <div class="actions">
    <%= f.submit "Mendaftar", class: "btn btn-success" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
