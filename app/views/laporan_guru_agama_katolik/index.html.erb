<div class="card">
  <h1 class="card-header">Laporan Guru Agama Katolik</h1>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Judul</th>
      <th scope="col">Tautan</th>
      <th scope="col">Nama Guru</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @laporan_guru_agama_katolik.each do |laporan_guru_agama_katolik| %>
      <tr scope="row">
        <td><%= laporan_guru_agama_katolik.judul %></td>
        <td><%= laporan_guru_agama_katolik.tautan %></td>
        <td><%= laporan_guru_agama_katolik.nama_guru %></td>
        <td><%= link_to fa_icon("eye"), laporan_guru_agama_katolik %></td>
        <td><%= link_to fa_icon("pencil"), edit_laporan_guru_agama_katolik_path(laporan_guru_agama_katolik) %></td>
        <td><%= link_to fa_icon("trash"), laporan_guru_agama_katolik, method: :delete, data: { confirm: 'Anda yakin?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Membuat Laporan Guru Agama Katolik', new_laporan_guru_agama_katolik_path, :class => "btn btn-primary" %>