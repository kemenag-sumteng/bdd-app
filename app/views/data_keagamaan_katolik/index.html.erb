<div class="card">
  <h1 class="card-header">Data Keagamaan Katolik</h1>
  <div class="card-body">
    <p class="card-text">Dibawah ini dapat Anda temukan Data Kegamaan Katolik.</p>
  </div>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Judul</th>
      <th scope="col">Tautan</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
  <% @data_keagamaan_katolik.each do |data_keagamaan_katolik| %>
    <tr scope="row">
      <td><%= data_keagamaan_katolik.judul %></td>
      <td><%= truncate(data_keagamaan_katolik.tautan) %></td>
      <td><%= link_to fa_icon("eye"), data_keagamaan_katolik %></td>
      <td><%= link_to fa_icon("pencil"), edit_data_keagamaan_katolik_path(data_keagamaan_katolik) %></td>
      <td><%= link_to fa_icon("trash"), data_keagamaan_katolik, method: :delete, data: { confirm: 'Anda yakin?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Membuat Data Keagamaan Katolik', new_data_keagamaan_katolik_path %>
