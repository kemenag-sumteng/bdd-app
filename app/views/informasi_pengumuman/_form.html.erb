<%= bootstrap_form_for(@informasi_pengumuman, local: true) do |form| %>
  <div class="card-body">
    <div class="field">
      <%= form.text_field :judul %>
    </div>
    <div class="field">
      <%= form.text_area :isi %>
    </div>
    <div class="field">
      <%= form.text_area :lampiran %>
    </div>
    <div class="actions">
      <%= form.submit "Membuat Informasi Pengumuman", class: "btn btn-success" %>
    </div>
  </div>
<% end %>
